<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.myapplication.RegisterActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/sign_in_3_akun_blue"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/daftarMurid"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent8"
            android:gravity="center"
            android:text="Daftar Menjadi Murid"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*Semua orang bisa menjadi murid"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/daftarPengajar"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent9"
            android:gravity="center"
            android:text="Daftar Menjadi Pengajar"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*Hanya untuk orang yang telah melewati seleksi kepada salah satu mitra"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/daftarAdmin"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent10"
            android:gravity="center"
            android:text="Daftar Menjadi Admin Masjid"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="*Hanya untuk setiap perwakilan setiap masjid yang telah mendapat kode verifikasi"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
