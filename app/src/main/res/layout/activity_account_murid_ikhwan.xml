<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.myapplication.AccountMuridIkhwanActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@color/colorAccent3"
                android:gravity="center"
                android:text="Murid - Ikhwan"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_weight="1"
                android:background="@drawable/stroke_button"
                app:srcCompat="@color/colorAccent3"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="Nama Lengkap"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:text="Usia"
                android:textAlignment="center"
                android:textColor="#b4b5b5"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="1200"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="Lanjut 1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="Rp. 500.000"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="Point"
                    android:textAlignment="center"
                    android:textColor="#b4b5b5"
                    tools:ignore="NestedWeights" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="Rank Tahsin"
                    android:textAlignment="center"
                    android:textColor="#b4b5b5" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="123dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/background_light"
                    android:text="Kal-Cash"
                    android:textAlignment="center"
                    android:textColor="#b4b5b5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton22"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_1"
                    tools:ignore="ContentDescription,NestedWeights" />

                <ImageButton
                    android:id="@+id/imageButton23"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_2"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/imageButton24"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_3"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton25"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_4"
                    tools:ignore="ContentDescription,NestedWeights" />

                <ImageButton
                    android:id="@+id/imageButton26"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_5"
                    tools:ignore="ContentDescription" />

                <ImageButton
                    android:id="@+id/imageButton27"
                    android:layout_width="123dp"
                    android:layout_height="123dp"
                    android:layout_weight="1"
                    android:background="@drawable/stroke_button"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/account_murid_ikhwan_button_6"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>
